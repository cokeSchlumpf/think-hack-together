{
  "name": "test",
  "version": "1.0.0",
  "description": "${project.description}",
  "homepage": "http://wellnr-thinkhacktogether.bluemix.com",
  "author": "Michael Wellner <michael.wellner@de.ibm.com>",
  "license": "MIT",
  "main": "lib/main.js",
  "directories": {
    "lib": "lib/"
  },
  "dependencies": {
    "classnames": "^2.1.5",
    "cookie": "^0.2.2",
    "dateformat": "^1.0.11",
    "fluxxor": "^1.7.3",
    "history": "^1.12.3",
    "intl": "^1.0.1",
    "node-rest-client": "^1.5.1",
    "react": "^0.14.0",
    "react-addons-linked-state-mixin": "^0.14.0",
    "react-addons-update": "^0.14.0",
    "react-bootstrap": "^0.27.1",
    "react-dom": "^0.14.0",
    "react-intl": "^2.0.0-beta-1",
    "react-router": "^1.0.0-rc3",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-core": "^5.5.7",
    "babel-jest": "^5.3.0",
    "babelify": "^6.4.0",
    "browserify": "^12.0.1",
    "clean-css": "^3.4.5",
    "esformatter": "^0.8.1",
    "esformatter-jsx": "^2.3.6",
    "eslint": "^1.6.0",
    "eslint-plugin-react": "^3.5.1",
    "jest-cli": "^0.6.1",
    "less": "^2.5.3",
    "less-plugin-clean-css": "^1.5.1"
  },
  "scripts": {
    "babelify": "browserify -e ./src/main.js -t [ babelify ] > ./assets/js/main.min.js",
    "build": "npm run format && npm run lint && npm test && npm run babelify && npm run css",
    "build-dev": "browserify -e ./src/main.js -t [ babelify --sourceMapRelative . ] > ./assets/js/main.min.js",
    "cu": "ncu",
    "cuu": "ncu -u",
    "css": "lessc --clean-css ./src/style.less ./assets/css/style.min.css",
    "format": "esformatter -i ./src/**/*.js",
    "lint": "eslint --fix ./src",
    "test": "jest",
    "notify-build-dev": "notify -t 'build-dev' -m 'DONE'"
  },
  "watch": {
    "build-dev": "src/**/*.js",
    "css": "src/**/*.less"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
