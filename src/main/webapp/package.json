{
  "name": "test",
  "version": "1.0.0",
  "description": "${project.description}",
  "homepage": "http://wellnr-thinkhacktogether.bluemix.com",
  "author": "Michael Wellner <michael.wellner@de.ibm.com>",
  "license": "MIT",
  "main": "lib/main.js",
  "directories": {
    "lib": "lib/"
  },
  "dependencies": {
    "classnames": "^2.1.5",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-router": "^1.0.0-rc3",
    "restful.js": "^0.9.1"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-plugin-object-assign": "^1.2.1",
    "browserify": "^11.2.0",
    "catw": "^1.0.1",
    "dateformat": "1.0.11",
    "envify": "~3.4.0",
    "eslint": "^1.6.0",
    "eslint-plugin-react": "^3.5.1",
    "less": "^2.5.3",
    "uglify-js": "^2.4.24",
    "npm-watch": "^0.0.1"
  },
  "scripts": {    
    "build": "npm run lint && npm run babel && npm run browserify && npm run css && rm -rf ./tmp",
    
    "css": "catw -c 'lessc -' './src/style.less' > ./assets/css/style.css",
    "lint": "eslint ./src",
    "babel": "babel ./src --plugins object-assign --out-dir ./tmp/transpiled --source-maps inline",
    "browserify": "browserify ./tmp/transpiled/main.js > ./assets/js/main.min.js",
    
    "watch": "npm-watch"
  },
  "watch": {
    "build": "src/**/*.{js,less}"
  }
}