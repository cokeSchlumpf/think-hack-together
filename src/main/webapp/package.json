{
  "name": "test",
  "version": "1.0.0",
  "description": "${project.description}",
  "homepage": "http://wellnr-thinkhacktogether.bluemix.com",
  "author": "Michael Wellner <michael.wellner@de.ibm.com>",
  "license": "MIT",
  "main": "lib/main.js",
  "directories": {
    "lib": "lib/"
  },
  "dependencies": {
    "classnames": "^2.1.5",
    "fluxxor": "^1.7.3",
    "history": "^1.12.3",
    "node-rest-client": "^1.5.1",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-router": "^1.0.0-rc3"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-jest": "^5.3.0",
    "babel-plugin-object-assign": "^1.2.1",
    "browserify": "^11.2.0",
    "catw": "^1.0.1",
    "clean-css": "^3.4.5",
    "less-plugin-clean-css": "^1.5.1",
    "dateformat": "1.0.11",
    "envify": "~3.4.0",
    "esformatter": "^0.7.3",
    "esformatter-jsx": "^2.3.6",
    "eslint": "^1.6.0",
    "eslint-plugin-react": "^3.5.1",
    "jest-cli": "^0.5.10",
    "jsdoc": "^3.3.3",
    "jsdoc-babel": "^0.1.0",
    "less": "^2.5.3",
    "npm-watch": "^0.0.1"
  },
  "scripts": {
    "babel": "babel ./src --plugins object-assign --out-dir ./tmp/transpiled --source-maps inline",
    "browserify": "browserify ./tmp/transpiled/main.js > ./assets/js/main.min.js",
    "build": "npm test && npm run lint && npm run build-dev && npm run css && npm run jsdoc",
    "build-dev": "npm run esformatter && npm run babel && npm run browserify && rm -rf ./tmp",
    "css": "lessc --clean-css ./src/style.less ./assets/css/style.min.css",
    "format": "esformatter -i ./src/**/*.js",
    "jsdoc": "jsdoc -c ./jsdoc.json -d ./../../../docs -r ./src",
    "lint": "eslint --fix ./src",
    "test": "jest",
    "watch": "npm-watch"
  },
  "watch": {
    "build-dev": "src/**/*.js",
    "css": "src/**/*.less"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
